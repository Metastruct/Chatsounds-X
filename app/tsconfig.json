{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "resolveJsonModule": true,
        "outDir": "./build",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}